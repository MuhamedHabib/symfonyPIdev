
{% extends 'layout.html.twig' %}

{# *************************************************************************************** #}
{% block title %}Modifier une formation{% endblock %}
{% block content %}
    <div class="container">
        <div class="au-card recent-report">
            <div class="au-card-inner">
                <section class="dashboard-counts section-padding">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <h3 class="breadcrumb">
                                    <i class="fa fa-plus-square"></i>  modifier un formation
                                </h3>
                                <div class="row">
                                    <div class="col-lg-12">
                                        {{ form_start(editform, {'method': 'post','attr': {'class': 'edit_formation'}}) }}
                                        <div class="form-group">
                                            <label>Libellé : </label>
                                            {{ form_widget(editform.libelle, {'attr': {'class':'form-control ', 'placeholder': 'libellé','required' : 'true'}}) }}

                                        </div>
                                        <div class="form-group">
                                            <label>Description : </label>
                                            {{ form_widget(editform.description , {'attr': {'class':'form-control ', 'placeholder': 'une petite description','required' : 'true'}}) }}

                                        </div>
                                        <div class="form-group">
                                            <label>Type: </label>
                                            {{ form_widget(editform.type , {'attr': {'class':'form-control', 'placeholder': 'type de formation','required' : 'true'}}) }}
                                        </div>

                                        <div class="form-group">
                                            <label>Image  : </label>
                                            {{ form_widget(editform.image, {'attr': {'class':'form-control', 'placeholder': 'choisir une Icon','required' : 'true'}}) }}
                                        </div>

                                        <div class="form-group">
                                            <label>File  : </label>
                                            {{ form_widget(editform.brochure, {'attr': {'class':'form-control', 'placeholder': '','required' : 'true'}}) }}
                                        </div>

                                        <button class="btn btn-danger float-right"  type="submit">Modifier</button>
                                        <br/><br/>
                                        {{ form_end(editform) }}
                                        {#{{ include('formation/_form.html.twig') }}#}
                                        <button class="btn btn-danger float-right"  type="submit"><a style="color: #FFFFFF" href="{{ path('list_formation') }}">back to list</a></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>

    <br/>

{% endblock content %}
