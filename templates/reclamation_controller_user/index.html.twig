{% extends 'baseUser.html.twig' %}

{% block container %}
    <section id="main-content">
        <div style="width: auto; length: auto ">
            <div class="app-content">

                <div style="padding-bottom: 20px;  margin: 10px 0 0px;  border-bottom: 1px solid #eee;">
                    <div style="padding-bottom: 20px;  margin: 10px 0 0px;  border-bottom: 1px solid #eee;">

                    </div>

                    <div class="card-header">
                        <div class="card-title"><h4>Liste des réclamations</h4></div>
                    </div>
                    {% for message in app.flashes('info') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
                <div style="width: auto; length: auto ">
                    <div style="width: auto; length: auto ">
                        <div >
                            <div class="btn-toolbar " role="toolbar" aria-label="Programmatic control">
                            </div>
                            <a class="btn btn-primary btn-sm mt-3 mb-3" style="background-color: #761c19; border-color: #761c19" href="{{ path('reclamation_new_User')}}">  <i class="fa fa-plus pull-right"></i> <span class="sm-1 "> </span>Ajouter une réclamation</a>
                            <div class="btn-group btn-group-sm " >


                            </div>
                            <div class="table-responsive">
                                <table id="example" class="table table-striped table-bordered" >
                                    <thead class="thead-dark">
                                    <tr>
                                        <th >IdReclamation</th>
                                        <th>DateCreation</th>
                                        <th>DateValidation</th>
                                        <th>Type</th>
                                        <th>Sujet</th>
                                        <th>Text</th>
                                        <th>Statut</th>
                                        <th>Avancement</th>
                                        <th>Screenshot</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    <tr      {% for reclamation in reclamations %}
                                        <tr>
                                            <td>{{ reclamation.idReclamation }}</td>
                                            <td>{{ reclamation.dateCreation |date('Y-m-d') }}</td>
                                            <td>{% if reclamation.statut == "validée" %}
                                                    {{ reclamation.dateValidation |date('Y-m-d') }}
                                                {% else %}
                                                    {{ reclamation.dateValidation ? reclamation.dateValidation|date('Y-m-d') : '' }}
                                                {% endif %}
                                            </td>
                                            <td>{{ reclamation.type }}</td>
                                            <td>{{ reclamation.object }} </td>
                                            <td>{{ reclamation.text }}</td>
                                            <td>{{ reclamation.statut }}</td>
                                            <td> {% if reclamation.statut == "validée" %}
                                                <div class="progress">
                                                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success " role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                                                </div>

                                                {% elseif  reclamation.statut == "en attente" %}
                                                    <div class="progress">
                                                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 20%"></div>
                                                    </div>
                                                {% else %}
                                                        <div class="progress">
                                                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 50%"></div>
                                                        </div>
                                                {% endif %}


                                            </td>
                                            <td><img src="{{ asset('img/' ~ reclamation.screenshot ) }}" alt="img" class="image" style="max-height: 100px; width: 100px;" ></td>

                                            <td>
                                                {% if reclamation.statut == "validée" or reclamation.statut =="En cours" %}
                                                <a href="{{ path('reclamation_edit_User', {'idReclamation': reclamation.idReclamation}) }}" hidden>  <i class="fa fa-pencil not-active" ></i> <span class="sm-1" ></span> </a>
                                                <a href="{{ path('reclamation_delete_User', {'idReclamation': reclamation.idReclamation}) }}" hidden><i class="fa fa-trash not-active"></i> <span class="sm-1"> </span></a>
                                                {% else %}
                                                    <a href="{{ path('reclamation_edit_User', {'idReclamation': reclamation.idReclamation}) }}" >  <i class="fa fa-pencil "></i> <span class="sm-1" > </span></a>
                                                    <a href="{{ path('reclamation_delete_User', {'idReclamation': reclamation.idReclamation}) }}"><i class="fa fa-trash"></i> <span class="sm-1"> </span></a>
                                                {% endif %}
                                                    <a href="{{ path('reclamation_show_user', {'idReclamation': reclamation.idReclamation}) }}"><i class="fa fa-eye "></i> <span class="sm-1"></span></a>


                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="10">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <div style="margin-left: 500px" {{ knp_pagination_render(reclamations) }} </div>

                        </div>
                        </div>
                        <!-- table-wrapper -->
                        <div class="card-body">

                        </div>

                    </div>

                    <!-- section-wrapper -->
                </div>


            </div>
        </div>
        </div>
        </div>
        </div>
    </section>
{% endblock %}

