{% extends 'base.html.twig' %}


{% block container %}

    <div class="card-title">
        <h4>Liste des réclamations</h4>
    </div>
    <section id="main-content">
    <div style="width: auto; length: auto ">
        <div class="app-content">
            <div style="padding-bottom: 20px;  margin: 10px 0 0px;  border-bottom: 1px solid #eee;">
                <div style="padding-bottom: 20px;  margin: 10px 0 0px;  border-bottom: 1px solid #eee;">

                </div>

                <div class="card-header">

                    <div class="card-title">
                       <h4>Liste des réclamations</h4>
                    </div>
                    <div class="container">
                        <!-- Trigger the modal with a button -->

                        <!-- Modal -->
                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header" style="background-color: #761c19">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Some text in the modal.</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>


                </div>
            </div>
            <div style="width: auto; length: auto ">
                <div style="width: auto; length: auto ">
                    <div >
                        <div class="btn-toolbar " role="toolbar" aria-label="Programmatic control">
                            <div class="btn-group btn-group-sm " >


                            </div>
                            <div class="table-responsive">
                                <table id="example" class="table table-striped table-bordered" >
                                    <thead>
                                    <tr>
                                        <th>IdReclamation</th>
                                        <th>IdUser</th>
                                        <th>DateCreation</th>
                                        <th>DateValidation</th>
                                        <th>Type</th>
                                        <th>Sujet</th>
                                        <th>Text</th>
                                        <th>Statut</th>
                                        <th>Avancement</th>
                                        <th>Screenshot</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr      {% for reclamation in reclamations %}
                                        <tr>
                                            <td>{{ reclamation.idReclamation }}</td>
                                            <td>{{ reclamation.idUser }}</td>
                                            <td>{{ reclamation.dateCreation |date('Y-m-d H:i:s') }}</td>
                                            <td>{% if reclamation.statut == "validée" %}
                                                    {{ reclamation.dateValidation |date('Y-m-d') }}
                                                {% else %}
                                                    {{ reclamation.dateValidation ? reclamation.dateValidation|date('Y-m-d') : '' }}                                                {% endif %}
                                            </td>
                                            <td>{{ reclamation.type }}</td>
                                            <td>{{ reclamation.object }} </td>
                                            <td>{{ reclamation.text }}</td>
                                            <td>{{ reclamation.statut }}</td>
                                            <td> {% if reclamation.statut == "validée" %}
                                                    <div class="progress">
                                                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                                                    </div>

                                                {% elseif reclamation.statut == "en attente" %}
                                                    <div class="progress">
                                                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 20%"></div>
                                                    </div>

                                                {% else  %}
                                                        <div class="progress">
                                                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 50%"></div>
                                                        </div>
                                                {% endif %}


                                            </td>
                                            <td><img src="{{ asset('img/' ~ reclamation.screenshot ) }}" alt="img" class="image" style="max-height: 100px; width: 100px;" ></td>

                                            <td>
                                                <a href="{{ path('reclamation_show', {'idReclamation': reclamation.idReclamation}) }}"><i class="fa fa-eye "></i> <span class="sm-1"></span></a>
                                                {% if reclamation.statut == "validée"  or reclamation.statut =="En cours"  %}
                                                <a href="{{ path('reclamation_delete', {'idReclamation': reclamation.idReclamation}) }}" ><i class="fa fa-trash" ></i> <span class="sm-1"> </span></a>

                                                {% else %}
                                                    <a href="{{ path('reclamation_delete', {'idReclamation': reclamation.idReclamation}) }}" hidden><i class="fa fa-trash not-active" ></i> <span class="sm-1"> </span></a>

                                                {% endif %}

                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="10">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                                <div style="margin-left: 500px" {{ knp_pagination_render(reclamations) }} </div>

                            </div>
                        </div>
                        <!-- table-wrapper -->
                        <div class="card-body">

                        </div>

                    </div>

                    <!-- section-wrapper -->
                </div>


            </div>
        </div>
    </div>
    </div>
    </div>
    <div id="div_chart"></div>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        {{ gc_draw(piechart, 'div_chart') }}
    </script>
    </div>


</section>


{% endblock  %}
